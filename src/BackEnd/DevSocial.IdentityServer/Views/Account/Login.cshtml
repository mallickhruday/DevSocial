@model DevSocial.IdentityServer.ViewModels.LoginViewModel

<div class="login-container">
    <form method="post">
        <div class="form-group">
            @Html.HiddenFor(m => m.RedirectUrl)

            <div class="form-control log-info">
                <input type="text" class="log-email" name="email" required placeholder="UserName" />
            </div>

            <div class="form-control log-info">
                <input asp-for="Password" class="log-pass" name="password" required placeholder="Password" />
            </div>

        </div>
        <div class="form-group">
            <label class="remember-me" asp-for="RememberMe">
                <input asp-for="RememberMe" />
                <span>Remember Me</span>
            </label>
        </div>
        <div class="form-group">
            <button class="login-btn">Login</button>
        </div>
        <div class="form-group">
            <a href="/account/forgot-password?returnUrl=@Model.RedirectUrl">Forgot your password ?</a>
        </div>
    </form>
</div>
